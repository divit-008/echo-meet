{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": false,
    "strict": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"]
  },
  "include": ["src", "vite-env.d.ts"]
}
